---
const pathname = Astro.url.pathname;
const isSpanish = pathname.startsWith('/es');
const lang = isSpanish ? 'es' : 'en';
const homeHref = isSpanish ? '/es/' : '/';

const locales = [
  { code: 'en', label: 'English', href: pathname.replace(/^\/es/, '') || '/' },
  { code: 'es', label: 'Español', href: pathname.startsWith('/es') ? pathname : '/es' + pathname }
];
---

